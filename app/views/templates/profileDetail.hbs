<h2>{{name}}</h2>
<hr />
<div class="row">
	<div class="span2">
		<strong>Sensor:</strong><br />
		<strong>Control Mode:</strong><br />
	</div>
	<div class="span2">
		{{sensor}}<br />
		{{control_mode}}<br />
	</div>
</div>
<br />
<button class="edit" href="#">Edit Profile</button>
<hr />
<h4>Steps</h4>
<ol id="steps">
</ol>
<br />
<button class="add-step" class="btn btn-mini">Add Step</button>
<hr />
<h4>Override History</h4>
<ul id="overrides">
	{{#each overrides}}
		<li>{{dateFormat this.time format="MMMM Do YYYY, h:mm a"}} - {{this.action}}</li>
	{{/each}}
</ul>

