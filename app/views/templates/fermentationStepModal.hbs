<div id="step-modal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 id="stepModalLabel">Fermentation Step</h3>
	</div>
	<div class="modal-body">
		<form class="form-horizontal" id="step-form">
			<input type="hidden" name="step-input-id" value="">
			<div class="control-group">
				<label class="control-label" for="step-input-name">Name</label>
				<div class="controls">
					<input type="text" id="step-input-name" placeholder="Name" value="{{name}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="step-input-duration">Duration</label>
				<div class="controls">
					<input type="text" id="step-input-duration" placeholder="Duration" value="{{duration}}">
					<select id="step-input-unit" class="span1">
						{{#select unit}}
						<option value="days">Days</option>
						<option value="hours">Hours</option>
						{{/select}}
					</select>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="step-input-temperature">Temperature</label>
				<div class="controls">
					<input type="text" id="step-input-temperature" placeholder="Temperature" value="{{temperature}}">
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="step-input-order">Order</label>
				<div class="controls">
					<input type="text" id="step-input-order" placeholder="Order" value="{{order}}">
				</div>
			</div>
		</form>
	</div>
	<div class="modal-footer">
		<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		<button id="save-step" class="btn btn-primary">Save changes</button>
	</div>
</div>